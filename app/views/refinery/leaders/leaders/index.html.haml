.page-content
  %div{:style => 'margin-bottom:0px;text-align:center;'}
    .repertoire_head
      %div{:style=>'font-size:20px;line-height:30px;margin-bottom:10px;'}
        Répertoire des dirigeants
        %br
        de la République Populaire de Chine
      %div{:style=>'font-size:15px;line-height:15px;color:#666;margin-bottom:10px;'}
        Directory of governement leaders
        of the People's Republic of China
      %div{:style=>'font-size:15px;line-height:15px;color:#666;margin-bottom:30px;'}
        中华人民共和国政府领导名录
  .directory-content
    %div{:style=>'width:770px;margin-left:auto;margin-right:auto;'}
      %div{:style=>'width:150px;float:left;margin-right:4px;'}
        .repertoire_title
          Pouvoir Politique
        %a.no_deco{:href => '/leaders/powers/1'}
          .button_orga.pcc
            %div
              %div{:style=>'font-size:25px;margin-bottom:5px;'}
                PCC
              Parti Communiste Chinois
      %div{:style=>'width:150px;float:left;margin-right:4px;'}
        .repertoire_title
          Pouvoir Consultatif
        %a.no_deco{:href =>'/leaders/powers/2'}
          .button_orga.ccppc
            %div
              %div{:style=>'font-size:25px;margin-bottom:5px;'}
                CCPPC
              Conférence Consultative Politique du Peuple Chinois
      %div{:style=>'width:150px;float:left;margin-right:4px;'}
        .repertoire_title
          Pouvoir législatif et judiciaire
        %a.no_deco{:href =>'/leaders/powers/3'}
          .button_orga.apn
            %div
              %div{:style=>'font-size:25px;'}
                APN
              Assemblée Populaire Nationale
        %a.no_deco{:href =>'/leaders/powers/6'}
          .button_orga.cour
            %div
              Cour Populaire Suprême
              %br
              Parquet Populaire Suprême
      %div{:style=>'width:150px;float:left;margin-right:4px;'}
        .repertoire_title
          Pouvoir exécutif
        %a.no_deco{:href => '/leaders/powers/7'}
          .button_orga.gouv-central
            %div
              Gouvernement
              %div{:style=>'font-size:16px'}
                Central
              Conseil des Affaires d'Etat
        %a.no_deco{:href =>'/leaders/powers/5'}
          .button_orga.gouv-locaux
            %div
              Gouvernements
              %div{:style=>'font-size:16px'}
                Locaux
      %div{:style=>'width:150px;float:left;margin-right:4px;'}
        .repertoire_title
          Diplomatie
        %a.no_deco{:href =>'/leaders/powers/4'}
          .button_orga.diplo
            %div
              Représentations
              %div{:style=>'font-size:16px'}
                Diplomatiques
              Chinoises et Françaises
  = render 'refinery/leaders/shared/footer'
%div{:style=>'clear:both'}
= content_for :stylesheets, stylesheet_link_tag('refinery/leaders/leaders')
