%section#records
  %div{:style=>'margin-bottom:20px'}
    %div{:style=>'margin-bottom:10px;font-size:20px;'}
      = link_to 'Dirigeants', '/refinery/individuals'
    %div
      - @individuals.each do |individual|
        = link_to refinery.edit_leaders_admin_individual_path(individual) do
          %div{:style=>'display:inline-block;width:120px;text-align:center;margin-bottom:10px;'}
            = image_fu individual.image, Refinery::Images.user_image_sizes["small".to_sym]
            %div{:style=>''}
              = individual.name
              %br
              = individual.name_chinese
  .clearfix
  %div{:style=>'margin-bottom:20px'}
    %div{:style=>'margin-bottom:10px;font-size:20px;'}
      = link_to 'Groupes', '/refinery/groups'
    %div
      - @groups.each do |group|
        %div
          = link_to group.name, refinery.edit_leaders_admin_group_path(group)
          %i
            (
            = group.power.name
            )
  .clearfix
  %div{:style=>'margin-bottom:20px'}
    %div{:style=>'margin-bottom:10px;font-size:20px!important;'}
      = link_to 'Pouvoirs', '/refinery/powers'
    %div
      - @powers.each do |power|
        %div
          %div{:style=>'float:left;margin-right:5px;margin-top:4px;border-radius:5px;width:10px;height:10px;background:'+power.color}
          = link_to power.name, refinery.edit_leaders_admin_power_path(power)
%aside#actions
  = render 'actions'
