<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(group) -%>">
  <span class='title'>
    <div style="line-height:20px;margin-top:5px;margin-right:10px;border-radius:5px;box-shadow:0px 1px 2px #777; height:20px;color:white;text-align:center;text-shadow:0px 1px 1px #888;min-width:80px;display:inline-block;background:<%=group.power.color %>;padding:3px;">
      <%= group.power.short_name ||= group.power.name %>
    </div>
    <%= truncate(group.name, :length => 65, :omission => '...') %>
  </span>
  <span class="preview">
      | <%= group.individuals.count %> membres
    </span>
  <span class='actions'>

    <%= link_to refinery_icon_tag("delete.png"), refinery.leaders_admin_group_path(group),
        :class => "cancel confirm-delete delete_group",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => group.name)},
        :method => :delete unless(group.name == "guest" || !current_refinery_user.has_role?("Refinery"))%>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_leaders_admin_group_path(group),
         :title => t('.edit') if current_refinery_user.has_role?("Refinery") %>
    <%= link_to refinery_icon_tag("application_go.png"), refinery.leaders_admin_group_path(group),
      :title => t('.view_live_html'), :class => "show_group" %>
  </span>
</li>
