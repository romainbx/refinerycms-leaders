.row
  .span12
    = render 'refinery/leaders/shared/menu'
    .directory-content
      .row
        .span3
          = render :partial => 'refinery/leaders/shared/power_menu', :locals => {:power => @power, :groups => @groups}
        .span9
          %div#map
            = image_fu @power.map.image

= javascript_tag do
  window.map_links = #{raw @map_links.to_json}

= content_for :stylesheets, stylesheet_link_tag('refinery/leaders/leaders')
= content_for :javascripts, javascript_include_tag('refinery/leaders/leaders')
